def cipher(string, key)
  x = 0
  numbers = string.codepoints
  secret_message = []
  puts numbers
  while x < numbers.length do
    jump_number = numbers[x] + key
    secret_message.push(jump_number)
    x += 1
  end
  secret_message = decode(secret_message)
  message = secret_message.join
  puts message
  puts 'All done!'
end

